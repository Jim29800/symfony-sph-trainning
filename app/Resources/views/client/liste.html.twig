{% extends 'layout/layout.html.twig' %}
{# add this at the beginning of your template #}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
<div id="affiche">
    <button class="btn btn-block">Ajouter un client</button>
    <br>
</div>
<div id="ajout_client" style="display:none">
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_widget(form.save, {'attr': {'class': 'btn btn-success btn-block'}}) }} 
    {{ form_end(form) }}
</div>


<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Email</th>
            <th>Adresse</th>
            <th>Code Postal</th>
            <th>Ville</th>
            <th>Téléphone</th>
            <th>Commentaire</th>
            <th>Provenance</th>            
        </tr>
    </thead>
    <tbody>
        {% for client in clients %}
            <tr> 
                <td>{{ client.cliNom }}</td>
                <td>{{ client.cliPrenom }}</td> 
                <td>{{ client.cliEmail }}</td> 
                <td>{{ client.cliAdresse }}</td> 
                <td>{{ client.cliCp }}</td> 
                <td>{{ client.cliVille }}</td> 
                <td>{{ client.cliTel }}</td> 
                <td>{{ client.cliCommentaire }}</td> 
                <td>{{ client.cliProvenance }}</td> 
                
                
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
{% block lien %}
<script src="client.js"></script>
{% endblock %}